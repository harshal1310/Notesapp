<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:src="@drawable/ic_baseline_add_24"
        app:fabSize="normal"
        android:backgroundTint="#2196F3"
        android:id="@+id/addbut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/addbut"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/welcome"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Have a nice day"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintLeft_toRightOf="@id/addbut"
        android:id="@+id/haveniceday"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Notesview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:horizontalSpacing="6dp"

        android:verticalSpacing="6dp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addbut"
        android:layout_marginTop="25dp"
        />
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_width="25dp"
    android:layout_height="25dp"
    app:layout_constraintLeft_toRightOf="@id/addbut"
    app:layout_constraintTop_toTopOf="@id/addbut"
    android:id="@+id/blue"
    android:layout_marginLeft="10dp"
    android:backgroundTint="@color/blue"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/blue"
        app:layout_constraintTop_toTopOf="@id/addbut"
        android:id="@+id/red"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/red"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/red"
        app:layout_constraintTop_toTopOf="@id/addbut"
        android:id="@+id/pink"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/pink"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/pink"
        app:layout_constraintTop_toTopOf="@id/addbut"
        android:id="@+id/orange"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/orange"

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/orange"
        app:layout_constraintTop_toTopOf="@id/addbut"
        android:id="@+id/sky"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/sky"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/sky"
        app:layout_constraintTop_toTopOf="@id/addbut"
        android:id="@+id/green"
        android:layout_marginLeft="10dp"

        app:backgroundTint="@color/green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>



